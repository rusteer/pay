<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:paddingLeft="23dp"
         >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingLeft="20dp"
            android:text="积汇宝"
            android:textColor="@color/jhtc_black"
            android:textSize="25sp" />
          <Button
            android:id="@+id/back_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/title"
            android:background="@drawable/jhtc_back_bt_jhtc"
             />
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="8dip"
        android:layout_marginTop="5dip" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="手机话费支付"
        android:textColor="@color/jhtc_black" />
  <LinearLayout
        android:id="@+id/alltext"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginTop="5dp"
            android:text="应用名称："
            android:textColor="@color/jhtc_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/appname"
            android:text=""
            android:textColor="@color/jhtc_black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal" >

        <TextView
                       
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.1dp"
            android:text="提供商："
            android:textColor="@color/jhtc_black" />

        <TextView
             android:id="@+id/supplier" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.1dp"
            android:text="糖果公司"
            android:textColor="@color/jhtc_black" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0.1dp"
            android:text="商品："
            android:textColor="@color/jhtc_black" />
        <TextView
            android:id="@+id/commodity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.1dp"
            android:text="获取全部关卡"
            android:textColor="@color/jhtc_black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.1dp"
            android:text="单价："
            android:textColor="@color/jhtc_black" />

        <TextView
            android:id="@+id/id_Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.1dp"
            android:text="2元"
            android:textColor="@color/jhtc_black" />
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0.1dp"
            android:text="数量:"
            android:textColor="@color/jhtc_black" />
        <TextView
            android:id="@+id/id_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.1dp"
            android:text="1"
            android:textColor="@color/jhtc_black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.1dp"
            android:text="支付金额："
            android:textColor="@color/jhtc_black" />

        <TextView
            android:id="@+id/id_totle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.1dp"
            android:text="2元"
            android:textColor="@color/jhtc_black" />
       
    </LinearLayout>
    </LinearLayout>
    <TextView
               android:visibility="gone"
                android:id="@+id/errormsg"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
        		android:layout_marginRight="20dp"
        		android:layout_marginTop="15dp"
                android:background="@null"
                android:textColor="@color/jhtc_black"
                android:text="错误信息" />
    <RelativeLayout
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:paddingBottom="15dip"
        android:paddingTop="5dip" >

        <Button
            android:id="@+id/pay_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
      
             />

        <Button
            android:id="@+id/fail_bt"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
       
             />
        
    </RelativeLayout>

</LinearLayout>